  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application' %> <!-- Webpack -->


  <!-- Favicon -->
  <%= favicon_link_tag 'flexilearn-logo.png' %>

</head>

<body>
  <%#= render 'shared/flashes' %>
  <%= render 'shared/navbar' unless @navigation %>

  <div class="container-fluid" style="margin-top:8vh;background: #fcfcfc;">
    <%= yield %>
  </div>

  <%= render 'shared/footer' unless @navigation %>

  <script src="https://cdn.jsdelivr.net/npm/places.js@1.13.0/dist/cdn/placesAutocompleteDataset.min.js"></script>

  <!-- Turbolinks works better with ASYNC -->
  <%#= javascript_pack_tag 'application' %>
