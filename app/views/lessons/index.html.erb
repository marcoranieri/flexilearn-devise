<!-- Dynamic Head Title -->
<% provide(:title, 'Lessons') %>

<h1>Flexi Learn - My Lessons</h1>

<% if current_tutor %>
  <h4>Current Tutor: <%= current_tutor.email %></h4>
<% elsif current_student %>
  <h4>Current Student: <%= current_student.email %></h4>

  <% if current_student.name %>
    <h4>Name: <%= current_student.name %></h4>
  <% else %>
    <h4>Name: <%= current_student.last_name %> <%= current_student.first_name %></h4>
  <% end %>

  <div><%= image_tag current_student.image_fb + "?type=large" if current_student.image_fb  %></div>

<% else %>
  <h4><i class="fas fa-user-slash"></i> User not Logged...</h4>
<% end %>

<br>
<%= link_to "Request a LESSON", new_lesson_path, class:"btn btn-success" %>
<br>
<!-- NAVIGATION index -->
<%= link_to "Go to STUDENTS", students_path, class:"btn btn-primary" %>
<%= link_to "Go to TUTORS", tutors_path, class:"btn btn-primary" %>
<%= link_to "Go to CATEGORIES", categories_path, class:"btn btn-primary" %>
<% if current_student %>
  <% if current_student.orders.count > 0 %>
    <%= link_to "Go to MY ORDERS", orders_path, class:"btn btn-secondary" %>
  <% end %>
<% end %>

<br>
<% @lessons.each do |lesson| %>
  <br>
  â†’ <%= link_to lesson.title, lesson_path(lesson) %>
  | Category : <%= link_to lesson.category.name, lesson_path(lesson) %>
  <p>Amount: <%= humanized_money_with_symbol(lesson.price) %></p>
<% end %>
