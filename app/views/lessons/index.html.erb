<!-- Dynamic Head Title -->
<% provide(:title, 'Lessons') %>

<h1>Flexi Learn - Lessons</h1>
<br>

<% if current_tutor %>

  <h3>Current Tutor: <%= current_tutor.email %></h3>

<% elsif current_student %>

  <h3>Current Student: <%= current_student.email %></h3>

  <% if current_student.name %>
    <h3>Name: <%= current_student.name %></h3>
  <% else %>
    <h3>Name: <%= current_student.last_name %> <%= current_student.first_name %></h3>
  <% end %>

  <div><%= image_tag current_student.image_fb + "?type=large" if current_student.image_fb  %></div>

<% else %>

  <h4><i class="fas fa-user-slash"></i> User not Logged...</h4>

<% end %>
<br>

<!-- NAVIGATION index -->
<%= link_to "Go to STUDENTS", students_path, class:"btn btn-primary" %>
<%= link_to "Go to TUTORS", tutors_path, class:"btn btn-primary" %>
<%= link_to "Go to CATEGORIES", categories_path, class:"btn btn-primary" %>
<% if current_student %>
  <% if current_student.orders != nil %>
    <%= link_to "Go to MY ORDERS", orders_path, class:"btn btn-secondary" %>
  <% end %>
<% end %>

<br>
