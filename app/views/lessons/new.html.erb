<!-- Dynamic Head Title -->
<% provide(:title, 'New Lesson') %>

<h1 class="text-center">
  <strong>
    Create Lesson
  </strong>
</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <%= simple_form_for @lesson,
        :url => url_for(:action => 'create', :controller => 'lessons'),
        :method => 'post' do |f| %>
        <%= f.input :title, placeholder: "Insert title here", autofocus: true,
            input_html: { :style=> 'width: 100%;', :rows => 2 } %>
        <%= f.label :category %>
        <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>

        <%= f.input :request, placeholder: "Explain your request",
            input_html: { :style=> 'width: 100%;', :rows => 8 } %>
        <%= f.input :notes, placeholder: "Add more info about the location ( like doorbell or floor number ) or extra notes about your request.",
            input_html: { :style=> 'width: 100%;', :rows => 5 } %>

        <%= f.label :tutor %>
        <%= f.collection_select(:tutor_id, Tutor.all, :id, :last_name, prompt: true) %><br><br>

        <%= f.input :location, placeholder: "Where do you wanna meet him/her?",
            input_html: { :style=> 'width: 100%;', id: "search" } %>
        <%= f.input :date, as: :string, html5: true,
            input_html: { value: Date.today.strftime('%Y-%m-%d').to_s, class: "datepicker"} %>
        <%= f.input :time, as: :time, html5: true,
            input_html: { value: Time.now.strftime('%H:%M').to_s } %>
        <%= f.label :tutor_lvl %>
        <%= f.select :tutor_lvl, options_for_select(1..3) %>
        <br>
        <br>
        <%= f.label :private, ("<i class='fas fa-running'></i> ASAP").html_safe %>
        <%= f.check_box :private %>
        <br>
        <br>
        <%= f.input :photo %><%= f.input :photo_cache, as: :hidden %>
        <br>
        <br>
        <%= f.submit "Create Lesson", class:"btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

<br>
