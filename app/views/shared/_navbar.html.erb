<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to lessons_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "flexilearn-logo", height: 50 %>
  <% end %>

  <!-- Right-side Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if student_signed_in? || tutor_signed_in? %>

<!-- Links when Logged In ----------------------------------------------------->
      <%= link_to student_path(current_student), style:"padding:0 10%" do %>
        <i class="far fa-user-circle" style="font-size:3em"></i>
      <% end %>
      <br>
      <%= link_to destroy_student_session_path, style:"padding:0 10%",
         method: :delete do %>
        <i class="fas fa-sign-out-alt" style="font-size:3em"></i>
      <% end %>

      <%#= link_to "Host", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "Trips", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- AVATAR with dropdown menu --->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <% if current_user.is_a? Student %><!-- S T U D E N T --->
            <%#= image_tag "http://kitt.lewagon.com/placeholder/users/marcoranieri", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <div class="avatar dropdown-toggle", id="navbar-wagon-menu",
            data-toggle="dropdown">
              <i class='fas fa-user-graduate'></i>
            </div>

          <% else %><!-- T U T O R --->
            <%#= image_tag "http://kitt.lewagon.com/placeholder/users/marcoranieri", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <div class="avatar dropdown-toggle", id="navbar-wagon-menu",
            data-toggle="dropdown">
              <i class='fas fa-chalkboard-teacher'></i>
            </div>
          <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_student_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

<!-- Sign in / Login link (when Logged Out)------------------------------------>
    <% else %>
      <%= link_to "SIGN UP", signup_path %> |
      <%= link_to "LOG IN", login_path %>

      <%= link_to t(".sign_up", default: "Student Sign Up"), new_student_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Student Login"), new_student_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "Tutor Sign Up"), new_tutor_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Tutor Login"), new_tutor_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

<!-- Dropdown list appearing on MOBILE only ----------------------------------->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <% icon_menu = 'fas fa-user-graduate dropdown-toggle' if current_student %>
      <% icon_menu = 'fas fa-chalkboard-teacher dropdown-toggle' if current_tutor %>
      <% icon_menu = 'fa fa-bars dropdown-toggle' if current_user.nil? %>
      <i class="<%= icon_menu %>"" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

