<!-- Dynamic Head Title -->
<% provide(:title, 'New Subject') %>

<h1 class="text-center">
  Create Subject<br>
  <%= link_to "<< Back", subjects_path, class:"btn btn-success" %>
</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <%= simple_form_for @subject,
        :url => url_for(:action => 'create', :controller => 'subjects'),
        :method => 'post' do |f| %>
        <%= f.input :name, placeholder: "Subject title here", autofocus: true %>
        <%= f.input :description, placeholder: "Insert description here!" %>
        <br>
        <%= f.submit "Create Subject", class:"btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
