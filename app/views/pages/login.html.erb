<!-- Dynamic Head Title -->
<% provide(:title, 'LogIn') %>

<!-- S T U D E N T Sign up  --------------------------------------------------->
<div class="col-md-offset-1 col-md-4">

  <h2>Sign up as a <strong>Student</strong></h2>
  <%= simple_form_for(@student, as: :student, url: session_path(:student)) do |f| %>

    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if Devise.mappings[:student].rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", id: 'student_submit' %>
    </div>
  <% end %>
</div>

<!-- T U T O R Sign up  --------------------------------------------------->
<div class="col-md-offset-2 col-md-4">

  <h2>Log in as a <strong>Tutor</strong></h2>
