<!-- Dynamic Head Title -->
<% provide(:title, 'LogIn') %>

<h1 class="text-center">LOG IN</h1>

<div class="row" >

  <div class="col-md-offset-1 col-md-5"><!-- S T U D E N T Sign up  ----------->

    <h2>Log in as a <strong>Student</strong></h2>
    <%= simple_form_for(@student, as: :student, url: session_path(:student)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if Devise.mappings[:student].rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", id: 'student_submit' %>
      </div>
    <% end %>
  </div>

  <!-- T U T O R Sign up  --------------------------------------------------->
  <div class="col-md-offset-1 col-md-5">

    <h2>Log in as a <strong>Tutor</strong></h2>
    <%= simple_form_for(@tutor, as: :tutor, url: session_path(:tutor)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, required: false %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if Devise.mappings[:tutor].rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", id: 'tutor_submit' %>
      </div>
    <% end %>
  </div>

</div>

<br>
<br>
<br>
<div class="text-center">
  <%= link_to "SIGN UP", signup_path, class: "btn btn-primary" %>
</div>
